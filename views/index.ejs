  <div id="PageContents" class="container-fluid">
    <!-- Row 1 -->
    <div class="row mb-4 mt-4">
      <!-- Task List -->
      <div class="col-lg-9">
        <div id="upcomingTasksCardList" class="card">
          <div class="card-body position-start p-0 mt-1">
            <h3 class="card-title mx-3">Upcoming Tasks</h3>
            <button id="createTaskButton" type="button" class="btn btn-success w3-display-topright mx-3 mt-3"
              data-bs-toggle="modal" data-bs-target="#createTaskModal">+</button>
            <!-- Create Task Modal Form -->
            <div id="createTaskModal" class="modal fade" tabindex="-1">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header p-2">
                    <h5>New Task</h5>
                  </div>
                  <div class="modal-body">
                    <form class="row g-3 mt-1" onsubmit="createTask" role="form">
                      <input type="hidden" name="_method" value="post" />
                      <div class="mb-3">
                        <strong for="newAccountEmail">Task Name</strong>
                        <input type="text" class="form-control mt-2" placeholder="Name" name="taskName">
                      </div>

                      <div class="col-md-6">
                        <strong for="newAccountEmail">Urgency</strong>
                        <select class="mt-2" name="taskUrgency">
                          <option>High</option>
                          <option>Medium</option>
                          <option>Low</option>
                        </select>
                      </div>

                      <div class="col-md-6">
                        <strong for="newAccountEmail">Importance</strong>
                        <select class="mt-2" name="taskImportance">
                          <option>High</option>
                          <option>Medium</option>
                          <option>Low</option>
                        </select>
                      </div>

                      <div class="mb-2">
                        <strong for="newAccountEmail">Due Date</strong>
                        <input type="date" class="form-control mt-2" value="2025-11-8" name="taskDuedate">
                      </div>

                      <div class="mb-2">
                        <strong for="newAccountEmail">Task Description</strong>
                        <textarea class="form-control mt-2" placeholder="Enter description..."
                          name="taskDescription"></textarea>
                      </div>

                      <input class="btn btn-success" type="submit" value="Create Task">
                    </form>
                  </div>
                </div>
              </div>
            </div>

            <div id="upcomingTasksContent" class="d-flex flex-row flex-nowrap overflow-x-scroll mx-5"
              style="max-width: 900px;">
              <div id="upcomingTask" class="border d-none" style="width: 500px; margin-left: 10px;">
                <div class="card-body" style="">
                  <h3 class="card-title text-center">Task 1</h5>
                  <form class="mt-3">
                    <div class="mb-3">
                      <strong>Urgency: </strong>
                      <label>High</label>
                    </div>

                    <div class="mb-3">
                      <strong>Importance: </strong>
                      <label>Low</label>
                    </div>

                    <div class="mb-3">
                      <strong>Due Date: </strong>
                      <label>2025-10-20</label>
                    </div>

                    <input class="btn btn-success" type="button" value="View Full Task">
                    <input class="btn btn-success" type="button" value="Edit Task">
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


      <!-- Account Info -->
      <div class="col">
        <div id="accountInfoCard" class="card">
          <div class="card-body container text-center">
            <h3 class="card-title">User 1</h5>
              <form class="row text-center mt-2">
                <div class="mb-3">
                  <img id="accountCardAvatar" src="/images/github-icon-1-logo.webp" class="img-thumbnail" width="75">
                </div>

                <div class="mb-3">
                  <strong>Name: </strong>
                  <label id="accountCardNameLabel">John Doe</label>
                </div>

                <div class="mb-3">
                  <strong>Email: </strong>
                  <label id="accountCardEmailLabel">johndoe@email.com</label>
                </div>

                <div class="mb-3">
                  <strong>About Me: </strong>
                  <p id="accountCardAboutMeLabel" class="border border-primary-black p-2 mt-2">Lorem ipsum dolor sit amet, consectetur adipiscing
                    elit. Donec finibus interdum vulputate. Ut dignissim leo nec semper tempus. Maecenas pretium turpis
                    sed efficitur viverra.</p>
                </div>
              </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Row 2 -->
    <div class="row mb-4 mt-4">
      <div class="col">
        <div id="userGroupsList" class="card">
          <div class="card-body position-start p-0 mt-1">
            <h3 class="card-title mx-3">Groups</h3>
            <button id="createGroupButton" type="button" class="btn btn-success w3-display-topright mx-3 mt-3" data-bs-toggle="modal" data-bs-target="#createGroupModal">Create Group</button>
            <div id="userGroupsContent" class="d-flex flex-column flex-nowrap overflow-x-scroll mx-5" style="max-width: 900px;">
              <!-- Create Group Modal Form -->
              <div id="createGroupModal" class="modal fade" tabindex="-1">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header p-2">
                      <h5>New Group</h5>
                    </div>
                    <div class="modal-body p-3 pt-0">
                      <form class="row g-3 mt-1" onsubmit="createGroup()" role="form">
                        <input type="hidden" name="_method" value="post"/>
                        <div class="mb-2">
                          <strong for="newGroupName">Group Name</strong>
                          <input type="text" class="form-control mt-2" placeholder="Name" name="newGroupName">
                        </div>

                        <div class="col-lg-9 mb-2">
                          <strong for="userInviteList">Invite Others:</strong>
                          <label>(Comma seperated list of usernames.)</label>

                          <div class="input-group flex-nowrap">
                            <span class="input-group-text" id="addon-wrapping">@</span>
                            <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="addon-wrapping" name="userInviteList">
                          </div>

                        </div>
                        
                        <div>
                          <strong for="newGroupDescription">Description</strong>
                          <textarea class="form-control mt-2" placeholder="Enter a description for the group..."
                            name="groupDescription"></textarea>
                        </div>

                        <input class="btn btn-success" type="submit" value="Create Task">
                      </form>
                    </div>
                  </div>
                </div>
              </div>


              <div id="userGroupCard" class="border d-none" style="width: 500px; margin-left: 10px;">
                <div class="card-body" style="">
                  <h3 class="card-title text-center">Group 1</h5>
                    <form class="mt-3">
                      <div class="mb-3">
                        <strong>Urgency: </strong>
                        <label>High</label>
                      </div>

                      <div class="mb-3">
                        <strong>Importance: </strong>
                        <label>Low</label>
                      </div>

                      <div class="mb-3">
                        <strong>Due Date: </strong>
                        <label>2025-10-20</label>
                      </div>

                      <input class="btn btn-success" type="button" value="View Full Task">
                      <input class="btn btn-success" type="button" value="Edit Task">
                    </form>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>

